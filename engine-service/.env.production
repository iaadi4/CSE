# Production Database Configuration
DATABASE_URL=postgresql://exchange_user:CHANGE_THIS_PASSWORD@postgres:5432/exchange

# Redis Configuration
REDIS_URL=redis://redis:6379

# Server Configuration
SERVER_ADDR=0.0.0.0:8081
WS_PORT=8082

